<% include ../partials/header %>

      <div class="container">
        <header class="jumbotron">
          <div class="container">
              <h1>Bine ati venit la webTuts</h1>
              <p>Invata sa programezi chiar acum!</p>
              <a class="btn btn-primary btn-large "href = "/lessons/new">Adauga o lectie noua</a>
          </div>
    </header>

        <div class="row text-center">
         <div class="col-md-12">
           <% if(noMatch !== null) { %>
              <h3><%= noMatch %></h3>
            <% } %>
            </div>
          </div>
        <div class="row text-center">
            <% lessons.forEach(function(lesson){ %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card">
                  <img src="<%= lesson.image %>" class="card-img-top" alt="<%= lesson.name %>">
                  <div class="card-body">
                    <h5 class="card-title"><%= lesson.name %></h5>
                    <a href="/lessons/<%= lesson._id %>" class="btn btn-primary">Read More</a>
                  </div>
            </div>
          </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
