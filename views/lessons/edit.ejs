<% include ../partials/header %>

<div class="container">
    <div class="row">
      <div class = "col-md-12 text-center">
          <h1>Editeaza: <br>
           <strong> <%= lesson.name %> </strong>
          </h1>
    </div>
        <div class = "add-new">
            <form action="/lessons/<%= lesson._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="lesson[name]" value="<%= lesson.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type = "number" name = "lesson[difficulty]" value="<%= lesson.difficulty %>" min = "1" max = "5">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="lesson[description]" value="<%= lesson.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="lesson[image]" value="<%= lesson.image %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>

        </div>
    </div>
</div>

<% include ../partials/footer %>
